mixin page_navigation(object)

	//- Default
	- object = object || {}
	- object.linkPrev = object.linkPrev || "project-single-01.html"
	- object.linkPrevText = object.linkPrevText || "Modern Architecture"
	- object.linkPrevClass = object.linkPrevClass || "page-navigation-prev h4 rounded-3 bg-light"
	- object.linkNext = object.linkNext || "project-single-02.html"
	- object.linkNextText = object.linkNextText || "Product Marketing"
	- object.linkNextClass = object.linkNextClass || "page-navigation-next h4 rounded-3 bg-light"
	- object.linkAll = object.linkAll || "projects-01.html"
	- object.linkAllClass = object.linkAllClass || "page-navigation-all shadow"
	- object.css = object.css || ""
	- object.customClass = object.customClass || "mt-130"

	//- Element Class
	- elClass = "page-navigation "
	- elClass += object.customClass

	// Page navigation
	div(class=elClass, style=object.css)

		if object.linkPrev != ""

			a(href=object.linkPrev, class=object.linkPrevClass)

				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="14" fill="none"><path stroke="currentColor" stroke-width="1.7" d="M20 7H2m0 0 6.75-6M2 7l6.75 6"/></svg>

				span.d-none.d-lg-block

					=object.linkPrevText

		if object.linkAll != ""

			a(href=object.linkAll, class=object.linkAllClass)

				<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none"><path fill="currentColor" d="M0 0h7v7H0V0ZM11 0h7v7h-7V0ZM11 11h7v7h-7v-7ZM0 11h7v7H0v-7Z"/></svg>

		if object.linkNext != ""

			a(href=object.linkNext, class=object.linkNextClass)

				span.d-none.d-lg-block

					=object.linkNextText

				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="14" fill="none"><path stroke="currentColor" stroke-width="1.7" d="M0 7h18m0 0-6.75-6M18 7l-6.75 6"/></svg>
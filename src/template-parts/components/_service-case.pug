include _circle-icon.pug

mixin service_case(object)

	//- Default
	- object = object || {}
	- object.image = object.image || "assets/img/service-case-1-740x480.jpg"
	- object.imageClass = object.imageClass || ""
	- object.bodyClass = object.bodyClass || "position-relative"
	- object.icon = object.icon || '<svg xmlns="http://www.w3.org/2000/svg" width="22" height="19" fill="none"><path fill="currentColor" fill-rule="evenodd" d="M20.493 18.382c.396-.396.618-.933.618-1.493V5.278A2.111 2.111 0 0 0 19 3.167H9.5L7.389 0H2.11A2.111 2.111 0 0 0 0 2.111V16.89A2.111 2.111 0 0 0 2.111 19H19c.56 0 1.097-.222 1.493-.618Zm-8.938-9.938a1 1 0 1 0-2 0v2.167H7.388a1 1 0 1 0 0 2h2.167v2.167a1 1 0 1 0 2 0V12.61h2.166a1 1 0 0 0 0-2h-2.166V8.444Z" clip-rule="evenodd"/></svg>'
	- object.iconClass = object.iconClass || "circle-icon-sm text-white bg-accent-1 position-absolute me-50 top-0 end-0 translate-middle-y"
	- object.title = object.title || "Project Engineering"
	- object.titleClass = object.titleClass || "mb-15"
	- object.text = object.text || "Beast whose. You\"ll may fruit don\"t deep abundantly own void."
	- object.textClass = object.textClass || "font-size-15 mb-30"
	- object.link = object.link || "service-single.html"
	- object.css = object.css || ""
	- object.customClass = object.customClass || "rounded-4 bg-white shadow overflow-hidden"

	//- Element Class
	- elClass = "service-case lift"
	- elClass += " " + object.customClass

	// Service case
	div(class=elClass, style=object.css)

		if object.image != ""

			a.service-case-image(href=object.link, class=object.imageClass, data-img-height, style="--img-height: 64%;")

				img(loading="lazy", src=object.image, alt="")

		.service-case-body(class=object.bodyClass)

			if object.icon != ""

					+circle_icon({
						icon: object.icon,
						customClass: object.iconClass
					})

			if object.title != ""

				h4.service-case-title(class=object.titleClass)

					=object.title

			if object.text != ""

				p.service-case-text(class=object.textClass)

					=object.text

			if object.link != ""

				a(href=object.link, class="service-case-arrow stretched-link") <svg xmlns="http://www.w3.org/2000/svg" width="20" height="14" fill="none"><path stroke="currentColor" stroke-width="1.7" d="M0 7h18m0 0-6.75-6M18 7l-6.75 6"/></svg>
